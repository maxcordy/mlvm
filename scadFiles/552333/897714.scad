use <write.scad>
use <write/Write.scad>

//NOTE: Do not use too many letters, they will get too small to print legibly
text_line1="Love your vinyl";
text_line2="keep it clean";

//Choose your font
font = "orbitron.dxf";//[write/Letters.dxf:Letters, write/BlackRose.dxf:Black Rose, write/knewave.dxf:Knewave, write/orbitron.dxf:Orbitron]

Hole_options = 0; //[0:hole, 1:no hole]
Lable_options = 1; //[0:no lable, 1:text , 2:Ghost Vinyl logo]


/* [Hidden] */


length=123;
width=50;
height=40;
body_r=10;//handle radius
notch=5;
hole_r=12;

//figure out what to print
if (Hole_options==0)  {      //body with hole
difference(){body(); hole();}   };

if (Hole_options==1) body() ;//body no hole

if (Lable_options==1) { add_text();    };//text lable
if (Lable_options==2){add_logo() ;};//ghost vinyl logo

plate();

// that is all, only modules from here on down


module body(){
color("white")difference(){
hull(){
translate([width/2,height-body_r,0])cylinder(r=body_r,h=length);
translate([-width/2,height-body_r,0])cylinder(r=body_r,h=length);
translate([-width/2,0,0])cube([width,2,length]);
}//hull
translate([-(width-notch*2)/2,-1,-1])cube([width-notch*2,4,length+2]);
}//end diff
}//end module body

module hole(){
hull(){
translate([15,22,5])cylinder(r=hole_r,h=length);
translate([-15,22,5])cylinder(r=hole_r,h=length);
}//hull
}//end module hole

module plate(){
translate([-length/2,-width-notch,0])
difference(){
cube([length-4,width-notch*2-4,3]);
translate([length/2-2,(width-notch*2)/2-2,-1])
resize([length-15,width-24,0])cylinder(r=width,h=5);
}//end diff
}//end module plate

module add_text(){
//upper text
color("black")
translate([5,height-1,2])rotate([0,-90,-90])
resize([length-4,width/2,0])
write(text_line1,h=15,t=3,font=font);
//lower text
color("black")
translate([-20,height-1,2]) rotate([0,-90,-90])
resize([length-4,width/2,0])
write(text_line2,h=15,t=3,font=font);
}//end module text

//add_logo();

module add_logo(){
color("black")
translate([0,height-1,length/2]) rotate([0,-90,-90])
resize([width,width,0])ghost(3);
}//end module add_logo

